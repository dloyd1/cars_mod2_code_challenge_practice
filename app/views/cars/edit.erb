<h1> EDIT NEW CAR </h1>

<% if flash[:error] %>
ERROR:
  <% flash[:error].each do |e| %>
  <li>  <%= e %> </li>
  <% end %>
<% end %> <br>


<%= form_for @car do |f| %>
<%= f.label :name %>:
<%= f.text_field :name %> <br>
<%= f.label :color %>:
<%= f.text_field :color %> <br>
<%= f.label :miles %>:
<%= f.number_field :miles %> <br>
Owner: <%= f.collection_select(:owner_id, @owners, :id, :name)  %> <br>
<%= f.submit %>
<% end %>
